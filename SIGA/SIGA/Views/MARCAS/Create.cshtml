@model SIGA.Models.TBL_MARCAS

@{
    ViewBag.Title = "Create";
}
<div>
    @Html.ActionLink("Ver todas", "Index")
</div>
<br />
<div class="col-md-6">
    <div class="card card-user">
        <div class="card-header">
            <h5 class="card-title">Nueva marca</h5>
        </div>
        <div class="card-body">
            <form>
                @*<p><Strong>Nuevo pasillo</Strong></p>*@
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Nombre de marca</label>
                            <input type="text" required class="form-control" placeholder="Nombre">
                        </div>
                    </div>
                    <div class="col-md-12 " style="text-align:center">
                        <div class="form-group content-center">
                            <button type="submit" class="btn btn-primary btn-round">Guardar</button>
                        </div>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>
