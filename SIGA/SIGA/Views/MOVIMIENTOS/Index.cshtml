@model IEnumerable<SIGA.Models.TBL_MOVIMIENTOS>

@{
    ViewBag.Title = "Index";
}

@*<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>*@
<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 equel-grid" style="text-align:center">
        <div class="col-md-12 col-sm-12 card">
            <div class="card-body">
                <br/>
                <h3 class="title">
                    Usted aún no ha realizado ningún movimiento
                </h3>
                <br />
                <a>
                    <div class="item-wrapper">
                        <img class="img-xl mt-1 mb-1 mr-2" src="~/Content/assets/img/empty.jpg" id="Disp" alt="" width="200">
                    </div>
                </a>

                <p>

                </p>
            </div>
        </div>
    </div>
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Mis movimientos</h4>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.MOV_FEC_ENTRADA)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.MOV_USR_ENTRADA)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.MOV_FEC_SALIDA)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.MOV_USR_SALIDA)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TBL_PRODUCTOS.PROD_DESCRIP)
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MOV_FEC_ENTRADA)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MOV_USR_ENTRADA)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MOV_FEC_SALIDA)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MOV_USR_SALIDA)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TBL_PRODUCTOS.PROD_DESCRIP)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                                </td>
                            </tr>
                        }

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

