@model SIGA.Models.TBL_UBICACIONES

@{
    ViewBag.Title = "Create";
}
<div>
    @Html.ActionLink("Volver", "Index")
</div>
<br />
<div class="row">
    <div class="col-md-4">
        <div class="card card-user">
            <div class="card-header">
                <h5 class="card-title">Pasillo</h5>
            </div>
            <div class="card-body">
                <form>
                    @*<p><Strong>Nuevo pasillo</Strong></p>*@
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Descripción de pasillo</label>
                                <input type="text" required class="form-control" placeholder="Descripción">
                            </div>
                        </div>
                        <div class="col-md-12 " style="text-align:center">
                            <div class="form-group content-center">
                                <button type="submit" class="btn btn-primary btn-round">Guardar</button>
                            </div>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card card-user">
            <div class="card-header">
                <h5 class="card-title">Sección</h5>
            </div>
            <div class="card-body">
                <form>
                    @*<p><Strong>Nueva sección</Strong></p>*@
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Descripción de pasillo</label>
                                <input type="text" required class="form-control" placeholder="Descripción">
                            </div>
                        </div>
                        <div class="col-md-12 " style="text-align:center">
                            <div class="form-group content-center">
                                <button type="submit" class="btn btn-primary btn-round">Guardar</button>
                            </div>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card card-user">
            <div class="card-header">
                <h5 class="card-title">Nivel</h5>
            </div>
            <div class="card-body">
                <form>
                    @*<p><Strong>Nuevo nivel</Strong></p>*@
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Descripción de nivel</label>
                                <input type="text" required class="form-control" placeholder="Descripción">
                            </div>
                        </div>
                        <div class="col-md-12 " style="text-align:center">
                            <div class="form-group content-center">
                                <button type="submit" class="btn btn-primary btn-round">Guardar</button>
                            </div>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>


