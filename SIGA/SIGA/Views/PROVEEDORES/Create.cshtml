@model SIGA.Models.TBL_PROVEEDORES

@{
    ViewBag.Title = "Create";
}

<div>
    @Html.ActionLink("Volver", "Index")
</div>
<br />
<div class="col-md-12">
    <div class="card card-user">
        <div class="card-header">
            <h5 class="card-title">Nuevo proveedor</h5>
        </div>
        <div class="card-body">
            <form>
                <p><Strong>Detalles de proveedor</Strong></p>
                <div class="row">
                    <div class="col-md-6 pr-1">
                        <div class="form-group">
                            <label>Nombre</label>
                            <input type="text" required class="form-control" placeholder="Nombre" value="">
                        </div>
                    </div>
                    <div class="col-md-6 pl-1">
                        <div class="form-group">
                            <label>RNC/Cédula</label>
                            <input type="text" required class="form-control" placeholder="RNC/Cédula" value="">
                        </div>
                    </div>
                    <br />
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Teléfono</label>
                            <input type="number" required class="form-control" placeholder="999-999-9999">
                        </div>
                    </div>
                    <br />
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Teléfono 2</label>
                            <input type="number" required class="form-control" placeholder="999-999-9999">
                        </div>
                    </div>
                    <div class="col-md-4 " style="text-align:center">
                        <div class="form-group content-center">
                            <button type="submit" class="btn btn-primary btn-round">Guardar</button>
                        </div>
                    </div>
                </div>
               
            </form>
        </div>
    </div>
</div>
